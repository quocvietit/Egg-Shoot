<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- set background color-->
    <solid android:color="@color/colorButton"></solid>

    <!-- set width and color border -->
    <stroke android:color="@color/colorPrimary" android:width="1dp"></stroke>

    <!-- set properties-->
    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"></padding>

    <!-- set radius-->
    <corners android:radius="10dp"></corners>
</shape>